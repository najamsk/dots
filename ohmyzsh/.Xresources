! ------------------------------------------------------------------------------
!  Colors
! ------------------------------------------------------------------------------
!
!------------------------------------------------------------------------------

#define base00 #1e2541
#define base01 #3d4463
#define base02 #4d567d
#define base03 #57618c
#define base04 #b8b8c5
#define base05 #cccccc
#define base06 #d9d9d9
#define base07 #ffffff

#define base08 #F0719B
#define base09 #FFA56B
#define base0A #ffcb6b
#define base0B #5AF7B0
#define base0C #89DDFF
#define base0D #57C7FF
#define base0E #C792EA
#define base0F #ff5370

!  URxvt
! ------------------------------------------------------------------------------

*foreground:   base05
*background:   base00
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07


URxvt.cursorBlink : 0
URxvt.font        :xft:SF Mono:size=11
URxvt.boldFont    :xft:SF Mono:size=11
URxvt.italicFont  :xft:SF Mono:size=11

URxvt.lineSpace           : 2
URxvt.letterSpace         : -2
URxvt.scrollBar           : false
URxvt.internalBorder      : 44
URxvt.cursorUnderline     : false
URxvt.geometry            : 70x35
URxvt.thickness           : 5
URxvt.titleBar            : false
URxvt.intensityStyles     : false


URxvt.perl-ext-common : default,matcher
URxvt.url-launcher    : firefox
URxvt.matcher.button  : 1

! ------------------------------------------------------------------------------
! rofi
! ------------------------------------------------------------------------------
rofi.color-enabled: true

rofi.color-window:    base00 , base00 , base00 , base00 , base03
rofi.color-normal:    base00 , base03 , base00 , base00 , base07
rofi.color-active:    base03 , base0E , base00 , base0B , base00
rofi.color-urgent:    base00 , base03 , base00 , base00 , base03

rofi.fake-transparency : true
rofi.font              : SF Mono 11
rofi.columns           : 1
rofi.separator-style   : none
rofi.hide-scrollbar    : true
rofi.location          : 1
rofi.yoffset           : 48
rofi.xoffset           : 48
rofi.padding           : 32
rofi.fullscreen        : false
rofi.width             : 300
rofi.lines             : 6

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.rgba: rgb
Xft.dpi: 110

! ------------------------------------------------------------------------------
! 2bwm
! ------------------------------------------------------------------------------

twobwm.border_width: 12
twobwm.outer_border: 11
twobwm.focus_color: base07
twobwm.unfocus_color: base07
twobwm.fixed_color: base0D
twobwm.unkill_color: base08
twobwm.fixed_unkill_color: base0E
twobwm.outer_border_color: base00
twobwm.inverted_colors: true
